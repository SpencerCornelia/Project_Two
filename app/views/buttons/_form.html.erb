<label>Add new button</label>

<%= form_for @button do |f| %>
	<div class="form-inline">
		<div class="form-group">
			<%= f.text_field :condition, placeholder: "Set Condition", class: "form-control" %>
		</div>
		Votes:
		<div class="form-group">
			<%= f.number_field(:votes, in: 5.0..30.0, step: 5.0) %>
		</div>
		Time Limit?
		<div class="form-group">
			<%= f.number_field(:time_limit, in: 1.0..30.0, step: 1.0) %>
			Minutes
		</div>
		<!-- COME BACK TO THIS AFTER USER LOGIN IS FINISHED -->
		<%= f.hidden_field :room_id, :value => @room.id %>
		<div class="form-group">
			<%= f.submit "add", class: "btn btn-sm btn-primary"%>
		</div>
	</div>
<% end %>
