
<div class ="container-fluid"id= "welcomeIndex"> 
<% if @errors %>
<div>
	<ul>
		<% @errors.each do |error,msg| %>
			<li><%= error %>: <% msg %></li>
		<% end %>	
	</ul>
</div>
<% end %>

<h1 id="appName">UpVote</h1>

<p id="landingBlurb">Voting done anonymously</p>		

<div class="container">

    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-6">
								<a href="#" class="active" id="login-form-link">Login</a>
							</div>
							<div class="col-xs-6">
								<a href="#" id="register-form-link">Register</a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<%= form_for @user, url: "/sessions", method: "post", html: {id: "login-form"} do |f| %>
									<div class="form-group">
										<%= f.email_field :email, placeholder: "Email", class: "form-control" %>
									</div>
									<div class="form-group">
										<%= f.password_field :password, placeholder: "Password", class: "form-control" %>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<%= f.submit "Sign In", class: "form-control btn btn-login" %>
											</div>
										</div>
									</div>
								<% end %>
								<div id="register-form" style="display:none">
									<%= form_for @user do |f| %>
										<div class="form-group">
											<%= f.text_field :name, placeholder: "Name", class: "form-control" %>
										</div>
										<div class="form-group">
											<%= f.email_field :email, placeholder: "Email", class: "form-control" %>
										</div>
										<div class="form-group">
											<%= f.password_field :password, placeholder: "Password", class: "form-control" %>
										</div>
										<div class="form-group">
											<%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control" %>	
										</div>
										<div class="form-group">
											<%= f.telephone_field :phone_number, placeholder: "Phone #    ex. 5551234567", class: "form-control" %>
										</div>
										<div class="form-group">
											<%= f.telephone_field :twilio_number, placeholder: "Twilio #    ex. 15551234567", class: "form-control" %>
										</div>
										<div id="twilio_div">			
											<div>
												Need Twilio?
											</div>
											<div>
											<a href="https://www.twilio.com/try-twilio"><img id="twilio_logo" src="http://www.03studios.com/wp-content/uploads/2013/08/logos_powerdby_twilio.png"></a>
											</div>
										<div>								
										<div class="form-group">
											<div class="row">
												<div class="col-xs-6 col-xs-offset-3 ">
													<%= f.submit "Register", class: "form-control btn btn-register", id: "register_button" %>
												</div>
											</div>
										</div>
									<% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</div>
</div>

